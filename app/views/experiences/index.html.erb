<p id="notice"><%= notice %></p>

<h1>Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Industry</th>
      <th>Occupation</th>
      <th>Study method</th>
      <th>Learn age</th>
      <th>Learn hour</th>
      <th>Trigger</th>
      <th>Ingenuity</th>
      <th>Result</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.title %></td>
        <td><%= experience.industry %></td>
        <td><%= experience.occupation %></td>
        <td><%= experience.study_method %></td>
        <td><%= experience.learn_age %></td>
        <td><%= experience.learn_hour %></td>
        <td><%= experience.trigger %></td>
        <td><%= experience.ingenuity %></td>
        <td><%= experience.result %></td>
        <td><%= experience.user_id %></td>
        <td><%= link_to 'Show', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path %>
